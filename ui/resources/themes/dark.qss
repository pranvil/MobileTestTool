/* PySide6 Dark Theme (Refactored)
   Goals:
   - Restore visual hierarchy (window < container/cards < inputs)
   - Avoid the "QWidget nuclear selector" to prevent transparency artifacts
   - Keep existing objectName-specific rules stable where possible
*/

/* ===== Base Palette =====
   Level 1 (App background):  #1E1E1E
   Level 2 (Containers/cards): #2D2D2D
   Level 3 (Inputs):          #1A1A1A
   Borders (subtle):          #3E3E3E
   Input border:              #454545
   Accent (focus/selection):  #0078d4
*/

/* 主窗口 / 对话框（Level 1） */
QMainWindow,
QDialog,
QMessageBox {
    background-color: #1E1E1E;
    color: #EAEAEA;
}

/* Tooltip / Menu */
QToolTip {
    background-color: #2D2D2D;
    color: #ffffff;
    border: 1px solid #3E3E3E;
    padding: 6px 8px;
}

QMenu {
    background-color: #2D2D2D;
    color: #ffffff;
    border: 1px solid #3E3E3E;
}

QMenu::item {
    padding: 6px 20px;
}

QMenu::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

/* 安全网：常见容器/滚动区域背景兜底（避免透明洞/露白） */
QStackedWidget,
QToolBox {
    background-color: #1E1E1E;
    color: #EAEAEA;
}

/* Level 2: DockWidget 作为容器卡片（避免与窗口背景糊在一起） */
QDockWidget {
    background-color: #2D2D2D;
    color: #EAEAEA;
    border: 1px solid #3E3E3E;
}

/* 滚动区域：viewport + 其子内容（Qt 的"老梗"） */
QAbstractScrollArea,
QScrollArea,
QScrollArea > QWidget,
QScrollArea > QWidget > QWidget,
QAbstractScrollArea::viewport {
    background-color: #1E1E1E;
    border: none;
}

/* 工具栏 */
QToolBar {
    background-color: #2D2D2D;
    border: none;
    spacing: 5px;
    padding: 5px;
}

QToolBar::separator {
    background-color: #555555;
    width: 1px;
    margin: 5px;
}

/* 工具栏按钮 */
QToolButton {
    background-color: #333333;
    color: #EAEAEA;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
    padding: 5px 10px;
    min-width: 80px;
}

QToolButton:hover {
    background-color: #404040;
    border-color: #66B3FF;
}

QToolButton:pressed {
    background-color: #3D3D3D;
}

QToolButton:checked {
    background-color: #0078d4;
    border-color: #0078d4;
}

/* 下拉框 */
QComboBox {
    background-color: #1A1A1A;
    color: #EAEAEA;
    border: 1px solid #454545;
    border-radius: 4px;
    padding: 6px 8px;
    min-width: 80px;
}

QComboBox:hover {
    border-color: #666666;
}

QComboBox:focus {
    border-color: #0078d4;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    /* High-DPI friendly SVG arrow (white) */
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iOCIgdmlld0JveD0iMCAwIDEyIDgiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTEgMSBMNiA2IEwxMSAxIiBzdHJva2U9IiNFQUVBRUEiIHN0cm9rZS13aWR0aD0iMiIgZmlsbD0ibm9uZSIgc3Ryb2tlLWxpbmVjYXA9InJvdW5kIiBzdHJva2UtbGluZWpvaW49InJvdW5kIi8+PC9zdmc+);
    width: 12px;
    height: 8px;
    margin-right: 6px;
}

QComboBox QAbstractItemView {
    background-color: #2D2D2D;
    color: #EAEAEA;
    border: 1px solid #3E3E3E;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

/* Tab Widget */
QTabWidget::pane {
    border: 1px solid #3E3E3E;
    background-color: #1E1E1E;
}

QTabBar::tab {
    background-color: #2D2D2D;
    color: #CCCCCC;
    border: 1px solid #3E3E3E;
    border-bottom: none;
    padding: 8px 16px;
    margin-right: 2px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:selected {
    background-color: #1E1E1E;
    color: #5DAEFF;
    /* simulate connection with pane without negative margins */
    border-bottom: 1px solid #1E1E1E;
    border-top: 2px solid #0078d4;
    font-weight: 600;
}

QTabBar::tab:hover {
    background-color: #444444;
}

/* 按钮 */
QPushButton {
    background-color: #333333;
    color: #EAEAEA;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
    padding: 7px 12px;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #404040;
    border-color: #66B3FF;
}

QPushButton:pressed {
    background-color: #3D3D3D;
}

QPushButton:disabled {
    background-color: #2a2a2a;
    color: #666666;
    border-color: #3c3c3c;
}

/* 输入框 */
QLineEdit {
    background-color: #1A1A1A;
    color: #EAEAEA;
    border: 1px solid #454545;
    border-radius: 4px;
    padding: 6px 8px;
}

QLineEdit:hover {
    border-color: #666666;
}

QLineEdit:focus {
    border-color: #0078d4;
}

QTextEdit,
QPlainTextEdit {
    background-color: #1A1A1A;
    color: #CFCFCF;
    border: 1px solid #454545;
    border-radius: 4px;
    padding: 6px 8px;
}

QTextEdit:focus,
QPlainTextEdit:focus {
    border-color: #0078d4;
}

/* 复选框 */
QCheckBox {
    color: #CCCCCC;
    spacing: 5px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #454545;
    border-radius: 3px;
    background-color: #1A1A1A;
}

QCheckBox::indicator:hover {
    border-color: #666666;
}

QCheckBox::indicator:checked {
    background-color: #0078d4;
    border-color: #0078d4;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTAiIGhlaWdodD0iMTAiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTIgNUw0IDdMOCAzIiBzdHJva2U9IiNmZmZmZmYiIHN0cm9rZS13aWR0aD0iMiIgZmlsbD0ibm9uZSIvPjwvc3ZnPg==);
}

/* 单选框 */
QRadioButton {
    color: #CCCCCC;
    spacing: 5px;
}

QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #454545;
    border-radius: 9px;
    background-color: #1A1A1A;
}

QRadioButton::indicator:hover {
    border-color: #666666;
}

QRadioButton::indicator:checked {
    background-color: #0078d4;
    border-color: #0078d4;
}

/* 标签 */
QLabel {
    color: #CCCCCC;
}

/* 分区标题标签 */
QLabel.section-title {
    color: #66B3FF;
    font-weight: 600;
    padding: 2px 6px;
    margin: 4px 2px 4px 2px;
    background: transparent;
    border: none;
}

/* 分组框 - 卡片样式（伪立体） */
QGroupBox {
    background-color: #2D2D2D;
    border: 1px solid #3E3E3E;
    border-radius: 8px;
    padding: 22px 12px 12px 12px;  /* 足够的 padding-top，给标题下方留空间 */
    margin: 10px 8px 12px 8px;  /* 视觉分隔：顶部至少10px，缓解layout过紧 */
    color: #CCCCCC;
}

/* 卡片悬停效果 */
QGroupBox:hover {
    background-color: #333333;
    border-color: #4A4A4A;
}

QGroupBox::title {
    color: #66B3FF;
    font-weight: bold;
    background: #2D2D2D;
    padding: 2px 8px;
    margin-left: 10px;
    /* 不写负margin，让padding-top来给标题让位 */
    subcontrol-origin: margin;
    subcontrol-position: top left;
}

QGroupBox:hover::title {
    background-color: #333333;
    color: #7DBFFF;
}

/* 滚动条 */
QScrollBar:vertical {
    background-color: #1E1E1E;
    width: 12px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #555555;
    min-height: 20px;
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover {
    background-color: #666666;
}

QScrollBar::handle:vertical:pressed {
    background-color: #4A4A4A;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #1E1E1E;
    height: 12px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #555555;
    min-width: 20px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #666666;
}

QScrollBar::handle:horizontal:pressed {
    background-color: #4A4A4A;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* 表格 */
QTableWidget {
    background-color: #2D2D2D;
    color: #EAEAEA;
    border: 1px solid #3E3E3E;
    border-radius: 2px; /* 表格保持锐利，仅轻微圆角，避免表头裁切问题 */
    gridline-color: #3E3E3E;
}

/* 表格单元格编辑器（编辑态会弹出 QLineEdit，需避免被行高裁切） */
QTableWidget QLineEdit,
QTableView QLineEdit,
QAbstractItemView QLineEdit {
    /* 关键：减少纵向 padding，避免编辑态文字被上/下边框挡住 */
    padding: 0px 6px;
    min-height: 20px;
}

/* 重要：表格viewport需要覆盖全局 QAbstractScrollArea::viewport 的 Level1 背景 */
QTableWidget::viewport {
    background-color: #2D2D2D;
}

QTableWidget::item {
    padding: 5px;
}

QTableWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QHeaderView::section {
    background-color: #333333;
    color: #EAEAEA;
    padding: 5px;
    border: none;
    border-bottom: 1px solid #3E3E3E;
    border-right: 1px solid #3E3E3E;
}

/* 网络信息表格 */
QTableWidget#networkInfoTable {
    background-color: #2b2b2b;
    color: #ffffff;
    gridline-color: #555555;
    alternate-background-color: #2b2b2b;
}

QTableWidget#networkInfoTable::item {
    padding: 2px;
}

QTableWidget#networkInfoTable::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QTableWidget#networkInfoTable::item:hover {
    background-color: #4a4a4a;
}

QTableWidget#networkInfoTable QHeaderView::section {
    background-color: #3a3a3a;
    color: #ffffff;
    padding: 4px;
    border: none;
    border-bottom: 1px solid #555555;
    border-right: 1px solid #666666;
}

/* 状态栏 */
QStatusBar {
    background-color: #2D2D2D;
    color: #ffffff;
    border-top: 1px solid #3E3E3E;
}

/* 分割器 */
QSplitter::handle {
    background-color: #3E3E3E;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #4A4A4A;
}

/* 菜单（与顶部定义保持一致，避免旧规则覆盖） */
QMenu {
    background-color: #2D2D2D;
    color: #ffffff;
    border: 1px solid #3E3E3E;
}

QMenu::item {
    padding: 6px 20px;
}

QMenu::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

/* 对话框 */
QDialog {
    background-color: #1E1E1E;
    color: #ffffff;
}

/* 消息框 */
QMessageBox {
    background-color: #1E1E1E;
    color: #ffffff;
}

QMessageBox QPushButton {
    min-width: 80px;
}

/* 进度条 */
QProgressBar {
    background-color: #1A1A1A;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
    text-align: center;
    color: #ffffff;
}

QProgressBar::chunk {
    background-color: #0078d4;
}

/* 滑块 */
QSlider::groove:horizontal {
    background-color: #3c3c3c;
    height: 8px;
    border-radius: 4px;
}

QSlider::handle:horizontal {
    background-color: #0078d4;
    width: 16px;
    height: 16px;
    border-radius: 8px;
    margin: -4px 0;
}

QSlider::handle:horizontal:hover {
    background-color: #0088e4;
}

/* 文本编辑器：统一由上方 QTextEdit/QPlainTextEdit 规则管理 */

/* 日志查看器文本编辑框 */
QTextEdit#logViewerTextEdit {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #555555;
    border-radius: 4px;
}

/* 搜索结果文本编辑框 */
QTextEdit#searchResultsTextEdit {
    background-color: #0C0C0C;
    color: #FFFFFF;
    selection-background-color: #444444;
}

/* ADB命令输入区域 */
QFrame#adbCommandFrame {
    background-color: #2a2a2a;
    padding: 5px;
}

/* 列表 */
QListWidget {
    background-color: #2D2D2D;
    color: #ffffff;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
}

QListWidget::viewport {
    background-color: #2D2D2D;
}

QListWidget::item {
    padding: 5px;
}

QListWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
    border: none;
}

QListWidget::item:hover {
    background-color: #404040;
}

/* Jira_tool 左侧导航（避免局部硬编码，统一跟随主题） */
QListWidget#jiraSidebar {
    border: none;
    border-right: 1px solid #3E3E3E;
    background-color: #2b2b2b;
    color: #ffffff;
    border-radius: 0px;
}

QListWidget#jiraSidebar::item {
    padding: 10px;
    border-bottom: 1px solid #444;
    color: #ffffff;
}

QListWidget#jiraSidebar::item:hover {
    background-color: #3b3b3b;
}

QListWidget#jiraSidebar::item:selected {
    background-color: #0052CC;
    color: #ffffff;
}

/* Jira_tool 评论预览 */
QTextBrowser#jiraCommentPreview {
    background-color: #1A1A1A;
    color: #CFCFCF;
    border: 1px solid #454545;
    border-radius: 4px;
    padding: 6px 8px;
}

/* 树形控件 */
QTreeWidget {
    background-color: #2D2D2D;
    color: #ffffff;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
}

QTreeWidget::viewport {
    background-color: #2D2D2D;
}

QTreeWidget::item {
    padding: 3px;
}

QTreeWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QTreeWidget::item:hover {
    background-color: #404040;
}

/* 分隔线（QFrame HLine） */
QFrame[frameShape="4"] {
    background: #3E3E3E;
    color: #3E3E3E;
    border: none;
    min-height: 1px;
    max-height: 1px;
    margin: 8px 0;
}

/* 分隔线对象名样式 */
QFrame#lineDivider {
    background: #3E3E3E;
    border: none;
    min-height: 1px;
    max-height: 1px;
}

/* 卡片容器样式（真立体 - 配合阴影使用） */
QFrame#card {
    background: #2D2D2D;
    border: 1px solid #3E3E3E;
    border-radius: 10px;
    padding: 12px;
    margin: 8px 10px 12px 10px;  /* 更松的间距，抵消layout过紧 */
}

QFrame#card:hover {
    background: #333333;
    border-color: #4A4A4A;
}
